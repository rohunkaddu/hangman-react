<div class="mui-container-fluid">
  <div class="mui-col-md-4 mui-col-md-offset-4">
    <div class="mui-panel" style="margin-top: 50px; background-color: #ffe4b2;">
      <div class="categories" style="text-align: center">
        <div class="username" style="text-align: left">

        {{#if loggedInUser }}
          <h4>Welcome, {{ loggedInUser.username }}!</h4>
        {{else }}
          <h4>Welcome, Guest!</h4>
        {{/if }}
      </div>

      {{#if loggedInUser }}
        <div style="margin-bottom: 70px">
          <a href="/logout" class="mui-btn mui-btn--raised mui--pull-right">Logout</a>
        </div>
      {{/if}}

        <h3>Pick a Category</h3><br>
          <a href="http://localhost:3000/movies"><button style="background-color: #ffffe5; padding: 5px; font-size: 18px;">Movies</a></button>
          <a href="http://localhost:3000/states"><button style="background-color: #ffffe5; padding: 5px; font-size: 18px;">States</a></button>
          <a href="http://localhost:3000/videogames"><button style="background-color: #ffffe5; padding: 5px; font-size: 18px;">Video Games</a></button>

      </div>
    </div>
  </div>
</div>
